<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render '/books/new', book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
       <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
       </thead>
       <tbody>
         <% @users.each do |user| %>
         <tr>
           <td></td>
           <td><%= user.name %></td>
           <td><%= link_to 'Show' %></td>
         </tr>
         <% end %>
       </tbody>
      </table>
    </div>
  </div>
</div>