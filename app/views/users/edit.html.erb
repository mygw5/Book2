<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>User info</h2>
   <% if @user.errors.any? %>
   <div id="error-message">
      <h2 class="error-message-comment"><%= pluralize(@user.errors.count,"error") %> prohibited this obj from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |messege| %>
          <li><%= messege %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <%= form_with model: @user, method: :patch do |f| %>
     <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, class: "form-control" %>
     </div>
     <div class="form-group">
      <label>Image</label>
      <%= f.file_field :profile_image, accept: "image/*" %>
     </div>
     <div class="form-group">
      <label>Introduction</label>
      <%= f.text_area :introduction, class: "form-control" %>
     </div>
     <div class="form-group">
      <%= f.submit 'Update User', class: "btn btn-secondary" %>
     </div>
    <% end %>
  </div>
 </div>
</div>
