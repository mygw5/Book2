 <div class="container px-5 px-sm-0">
  <div class="row">
    <% if @book.errors.any? %>
    <div id="error-message">
      <h2 class="error-message-comment"><%= pluralize(@book.errors.count,"error") %> prohibited this obj from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |messege| %>
          <li><%= messege %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <%= render 'new', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
                <%= image_tag book.user.profile_image, size: '100x100' %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
    </table>
    </div>
  </div>
</div>