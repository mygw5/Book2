<div class="col-md-3">
  <h2>User info</h2>
  <table class="table">
    <tbody>
      <tr>
        <td>name</td>
        <td></td>
      </tr>
      <tr>
        <td>introduction</td>
        <td></td>
      </tr>
    </tbody>
  </table>
  <div class="row btn btn-outline-secondary btn-block">
  <%= link_to  class: "text-light" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  </div>
  <h2>New book</h2>
  <%= form_with model: @book, method: :post do |f| %>
    <div class="form-group">
      <label>Title</label>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>Opinion</label>
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Book', class: "btn btn-success" %>
    </div>
  <% end %>
</div>